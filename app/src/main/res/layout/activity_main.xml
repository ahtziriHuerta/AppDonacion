<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1E7C4FF"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- Logo arriba -->

    <!-- Bot贸n Iniciar sesi贸n -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Logo Manitas"
        android:src="@drawable/logo_manitas" />

    <Button
        android:id="@+id/btnIrLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesi贸n"
        android:backgroundTint="#7C4DFF"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button" />

    <!-- Bot贸n Registrarse -->
    <Button
        android:id="@+id/btnIrRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:backgroundTint="#7C4DFF"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="24dp"
        android:background="@drawable/rounded_button" />
</LinearLayout>


